<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_drawerlist_item"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:layout_width="35dp"
        android:layout_height="35dp" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/iv_drawerlist_item"
        android:layout_toRightOf="@+id/iv_drawerlist_item"
        android:layout_toEndOf="@+id/iv_drawerlist_item"
        android:layout_alignBottom="@+id/iv_drawerlist_item">

        <TextView
            android:id="@+id/tv_drawerlist_item"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/sec_text_color"
            android:text="I am list Item"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"

            android:layout_marginStart="35dp"

            android:layout_gravity="left|center_vertical" />
    </FrameLayout>

</RelativeLayout>